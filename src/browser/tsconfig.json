{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "../../dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "../../dist",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["index.ts"]
}
